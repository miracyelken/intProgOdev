@model Ogrenci
@{
    ViewData["Title"] = "AddOgrenci";
}

<h1>Öğrenci Ekleme İşlemi</h1>
<form asp-action="AddOgrenci" asp-controller="Ogrenci" method="post">
    <label>Ad:</label>
    <input asp-for="Ad" />
    <label>Soyad:</label>
    <input asp-for="Soyad" />
    <label>Numara</label>
    <input asp-for="Numara" />

    <input type="submit" value="Kaydet" />
</form>

