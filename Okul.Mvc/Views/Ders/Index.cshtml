@model IEnumerable<Ders>
@{
    ViewData["Title"] = "Index";
}

<h1>Ders Listesi</h1>
<a asp-action="AddDers" asp-controller="Ders" class="btn btn-outline-primary">Ders Ekleme</a>
<table class="table">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Ders Kodu</th>
            <th>Kredi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dersad</td>
                <td>@item.DersKod</td>
                <td>@item.Kredi</td>
				<td><a class=" btn btn-sm btn-outline-success" href="/Ders/EditDers/@item.Dersid">Düzenle</a>  <a class="btn btn-sm btn-outline-danger" href="/Ders/DeleteDers/@item.Dersid">Sil</a></td>

            </tr>
        }
    </tbody>
</table>

